<h1>{{title}}</h1>
<div class="row justify-content-center">
    <div class="col-md-8 order-md-1">
      <h4 class="mb-3">New Check</h4>
      {{form-open 'check' url class='needs-validation'}}
        {{form-hidden "siteId" site._id}}
        <div class="mb-3">
          <label for="name">Name</label>
          {{form-text 'name' class="form-control" id="name"}}
          <div class="invalid-feedback">
            Valid name is required.
          </div>
        </div>

        <div class="mb-3">
          <label for="url">URL</label>
          {{form-text 'url' class="form-control" id="url"}}
          <div class="invalid-feedback">
            Valid URL is required.
          </div>
        </div>

        <div class="mb-3">
          <label for="searchTerm">Search Term</label>
          {{form-text 'searchTerm' class="form-control" id="searchTerm"}}
          <div class="invalid-feedback">
            Valid Search Term is required.
          </div>
        </div>

        <div class="mb-3">
          <label for="statusCode">Status Code</label>
          {{form-text 'statusCode' class="form-control" id="statusCode"}}
          <div class="invalid-feedback">
            Valid Status Code is required.
          </div>
        </div>

        <div class="mb-3">
          <label for="frequency">Frequency</label>
          {{form-text 'frequency' class="form-control" id="frequency"}}
          <div class="invalid-feedback">
            Valid Frequency is required.
          </div>
        </div>

        <hr class="mb-4">
        {{form-submit 'save' 'Save Check' class="btn btn-primary btn-lg btn-block"}}
      {{form-close}}
    </div>
</div>