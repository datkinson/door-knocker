<h1>{{title}}</h1>
<div class="row justify-content-center">
    <div class="col-md-8 order-md-1">
      <h4 class="mb-3">New User</h4>
      {{form-open 'user' url class='needs-validation'}}
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName">First name</label>
            {{form-text 'firstName' user.firstName class="form-control" id="firstName"}}
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            {{form-text 'lastName' user.lastName class="form-control" id="lastName"}}
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="username">Username</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">@</span>
            </div>
            {{form-text 'username' user.username class="form-control" id="username" placeholder="Username"}}
            <div class="invalid-feedback" style="width: 100%;">
              Your username is required.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="email">Email <span class="text-muted"></span></label>
          {{form-email 'email' user.email class="form-control" id="email" placeholder="you@example.com"}}
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>

        <div class="mb-3">
          <label for="email">Password <span class="text-muted"></span></label>
          {{form-password 'password' class="form-control" id="password"}}
          <div class="invalid-feedback">
            Please enter a passowrd.
          </div>
        </div>
        <hr class="mb-4">
        {{form-submit 'save' 'Save User' class="btn btn-primary btn-lg btn-block"}}
      {{form-close}}
    </div>
</div>